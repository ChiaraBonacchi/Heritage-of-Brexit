searchPosts <-function(postList, keywords){
	#Creates column for storing keywords:

	postList$keywords <-NA

	i=1
	j= length(postList[[1]])+1
	while (i < j){


		a = postList$message[i]
		my_keywords <- c()
		for (m in keywords){
		l <- grepl(m, a,ignore.case = TRUE)
			if(l==TRUE){
			
			my_keywords <- append(my_keywords,m)}
			}
		postList$keywords[i]<-paste(my_keywords, collapse=', ' )
		i=i+1
	}
return (postList)
}
